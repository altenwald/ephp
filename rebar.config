{erl_opts, [
    debug_info,
    warnings_as_errors,
    {platform_define, "R1[56]", 'OLD_DICT_TYPE'}
]}.

{deps,[
    {neotoma, ".*", {git, "https://github.com/seancribbs/neotoma.git", master}},
    {ezic, ".*", {git, "https://github.com/waj/ezic.git", master}},
    {zucchini, ".*", {git, "https://github.com/altenwald/zucchini.git", master}},
    {unistring, ".*", {git, "https://github.com/altenwald/unistring.git", master}},

    %% documentation
    {edown, ".*", {git, "https://github.com/uwiger/edown", master}},

    %% coveralls
    {coveralls, ".*", {git, "git://github.com/markusn/coveralls-erl.git", master}}
]}.

{escript_incl_apps, [ezic,zucchini,unistring]}.
{escript_emu_args, "%%! -pa ephp/ephp/ebin -pa ephp/ezic/ebin -pa ephp/zucchini/ebin\n"}.

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.

{plugin_dir             , "deps/coveralls/src"}.
{cover_enabled          , true}.
{cover_print_enabled    , true}.
{cover_export_enabled   , true}.
{coveralls_coverdata    , ".eunit/eunit.coverdata"}.
{coveralls_service_name , "travis-ci"}.

{edoc_opts,[
	{doclet, edown_doclet},
	{edown_target, github},
	{top_level_readme, {"./README.md", "http://github.com/altenwald/ephp"}}
]}.

